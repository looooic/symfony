{% extends 'base.html.twig' %}


{% block title %}Administration{% endblock %}


{% block body %}
    <h3>Liste des articles :</h3>
    <section>
        <table>
            <tr>
                <th>Titre</th>
                <th>Summary</th>
                <th>Author</th>
                <th>Actions</th>
            </tr>
            {% for article in articles %}
                <tr>
                    <td><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a></td>
                    <td>{{ article.summary }}</td>
                    <td>{{ article.author ? article.author.user.username : 'nc' }}</td>
                    <td></td>

                </tr>
            {% endfor %}
        </table>
        <a href="{{ path('admin_index') }}">Retour Ã  l'administration</a>
    </section>
{% endblock %}